{
    "$schema" : "http://json-schema.org/draft-04/schema",
    "title" : "texture",
    "type" : "object",
    "description" : "A texture and its sampler.",
    "allOf" : [
        {
            "$ref" : "glTFChildOfRootProperty.schema.json"
        }
    ],
    "properties" : {
        "name" : {},
        "extensions" : {},
        "extras" : {},
        "format" : {
            "description" : "The texture's format.  Valid values correspond to WebGL enums: `6406` (ALPHA), `6407` (RGB), `6408` (RGBA), `6409` (LUMINANCE), and `6410` (LUMINANCE_ALPHA).",
            "default" : 6408,
            "gltf_webgl" : "`texImage2D()` format parameter",
            "oneOf" : [
                {
                    "enum" : [
                        6406
                    ],
                    "description" : "ALPHA - The texture's format."
                },
                {
                    "enum" : [
                        6407
                    ],
                    "description" : "RGB - The texture's format."
                },
                {
                    "enum" : [
                        6408
                    ],
                    "description" : "RGBA - The texture's format."
                },
                {
                    "enum" : [
                        6409
                    ],
                    "description" : "LUMINANCE - The texture's format."
                },
                {
                    "enum" : [
                        6410
                    ],
                    "description" : "LUMINANCE_ALPHA - The texture's format."
                }
            ],
            "short_description" : "The texture's format."
        },
        "internalFormat" : {
            "description" : "The texture's internal format.  Valid values correspond to WebGL enums: `6406` (ALPHA), `6407` (RGB), `6408` (RGBA), `6409` (LUMINANCE), and `6410` (LUMINANCE_ALPHA).  Defaults to same value as format.",
            "default" : 6408,
            "gltf_webgl" : "`texImage2D()` internalFormat parameter",
            "oneOf" : [
                {
                    "enum" : [
                        6406
                    ],
                    "description" : "ALPHA - The texture's internal format."
                },
                {
                    "enum" : [
                        6407
                    ],
                    "description" : "RGB - The texture's internal format."
                },
                {
                    "enum" : [
                        6408
                    ],
                    "description" : "RGBA - The texture's internal format."
                },
                {
                    "enum" : [
                        6409
                    ],
                    "description" : "LUMINANCE - The texture's internal format."
                },
                {
                    "enum" : [
                        6410
                    ],
                    "description" : "LUMINANCE_ALPHA - The texture's internal format."
                }
            ],
            "short_description" : "The texture's internal format."
        },
        "sampler" : {
            "allOf" : [
                {
                    "$ref" : "glTFid.schema.json"
                }
            ],
            "description" : "The ID of the sampler used by this texture."
        },
        "source" : {
            "allOf" : [
                {
                    "$ref" : "glTFid.schema.json"
                }
            ],
            "description" : "The ID of the image used by this texture."
        },
        "target" : {
            "description" : "The target that the WebGL texture should be bound to.  Valid values correspond to WebGL enums: `3553` (TEXTURE_2D).",
            "default" : 3553,
            "gltf_webgl" : "`bindTexture()`",
            "oneOf" : [
                {
                    "enum" : [
                        3553
                    ],
                    "description" : "TEXTURE_2D - The target that the WebGL texture should be bound to."
                }
            ],
            "short_description" : "The target that the WebGL texture should be bound to."
        },
        "type" : {
            "description" : "Texel datatype.  Valid values correspond to WebGL enums: `5121` (UNSIGNED_BYTE), `33635` (UNSIGNED_SHORT_5_6_5), `32819` (UNSIGNED_SHORT_4_4_4_4), and `32820` (UNSIGNED_SHORT_5_5_5_1).",
            "default" : 5121,
            "gltf_webgl" : "`texImage2D()` type parameter",
            "oneOf" : [
                {
                    "enum" : [
                        5121
                    ],
                    "description" : "UNSIGNED_BYTE - Texel datatype."
