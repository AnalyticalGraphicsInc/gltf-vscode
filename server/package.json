    "engines": {
        "node": "*"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/AnalyticalGraphicsInc/gltf-vscode"
    },
    "dependencies": {
        "gltf-validator": "2.0.0-dev.3.2",
        "json-source-map": "0.6.1",
        "vscode-languageserver": "^5.2.1",
        "vscode-uri": "^2.1.2"
    },
    "scripts": {
        "installServer": "installServerIntoExtension .. ./package.json ./tsconfig.json",
