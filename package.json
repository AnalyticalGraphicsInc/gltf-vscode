{
    "name": "gltf-vscode",
    "displayName": "glTF",
    "description": "Tools and utilities for editing glTF files",
    "version": "0.0.1",
    "publisher": "cesium",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:gltf.inspectDataUri",
        "onCommand:gltf.previewModel"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "gltf.inspectDataUri",
                "title": "glTF: Inspect Data URI"
            },
            {
                "command": "gltf.previewModel",
                "title": "glTF: Preview 3D Model"
            }
        ],
        "keybindings": [
            {
                "command": "gltf.inspectDataUri",
                "key": "alt+d",
                "mac": "option+d",
                "when": "editorTextFocus && editorLangId == 'json'"
            },
            {
                "command": "gltf.previewModel",
                "key": "alt+g",
                "mac": "option+g",
                "when": "editorTextFocus && editorLangId == 'json'"
            }
        ],
        "languages": [
            {
                "id": "json",
                "extensions": [
                    ".gltf"
                ]
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "*.gltf",
                "url": "./schemas/gltf-1.0/glTF.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "jshint": "^2.9.4",
        "yargs": "^6.5.0",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "json-source-map": "^0.4.0"
    }
}
